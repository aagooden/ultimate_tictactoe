<div class="menus">
	<div class="modal-content">
		<h2><%=session[:game].player1.name%> - You are X's</h2>
		<h2><%=session[:game].player2.name%> - You are O's</h2><br>
		<h2>Who wants to go first?</h2><br>
		<form class="" action="again" method="post">
		  <input type="radio" name="first_move" value="player1" required><%=session[:game].player1.name%><br>
		  <p>OR</p>
		  <input type="radio" name="first_move" value="player2" required><%=session[:game].player2.name%><br><br>
		  <input type="submit" name="" value="Start Game">
		</form>
	</div>
</div>